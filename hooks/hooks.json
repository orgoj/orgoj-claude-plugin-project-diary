{
  "hooks": {
    "PreCompact": [{
      "hooks": [{
        "type": "command",
        "command": "\"${CLAUDE_PLUGIN_ROOT}/zig-out/bin/mopc\" hook --project-dir \"${CLAUDE_PROJECT_DIR}\" pre-compact"
      }]
    }],
    "SessionEnd": [{
      "hooks": [{
        "type": "command",
        "command": "\"${CLAUDE_PLUGIN_ROOT}/zig-out/bin/mopc\" hook --project-dir \"${CLAUDE_PROJECT_DIR}\" session-end"
      }]
    }],
    "SessionStart": [{
      "hooks": [{
        "type": "command",
        "command": "\"${CLAUDE_PLUGIN_ROOT}/zig-out/bin/mopc\" hook --project-dir \"${CLAUDE_PROJECT_DIR}\" session-start"
      }]
    }],
    "Stop": [{
      "hooks": [{
        "type": "command",
        "command": "\"${CLAUDE_PLUGIN_ROOT}/zig-out/bin/mopc\" tracker --project-dir \"${CLAUDE_PROJECT_DIR}\" stop"
      }]
    }],
    "UserPromptSubmit": [{
      "hooks": [{
        "type": "command",
        "command": "\"${CLAUDE_PLUGIN_ROOT}/zig-out/bin/mopc\" tracker --project-dir \"${CLAUDE_PROJECT_DIR}\" prompt"
      }]
    }]
  }
}
